/*
* Loader
* 
*/



.loader
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background rgba(33, 28, 51, 1)
	z-index 100
	color $white
	text-align center
	
.loader__infos 
	position absolute
	width 100%
	top 50%
	margin-top -75px 
	margin 0
	animation pulse 1.5s ease 0s infinite normal

.loader__media
	width 100px
	margin 0 auto

.loader__info
	margin-top $space
	font-family Montserrat, Arial, Sans-serif
	text-transform uppercase
	pxtorem(font-size, 20)
	
